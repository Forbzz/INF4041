{% extends 'EsieaBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
<header>
  <h1>Contactez nous</h1>
</header>

{% for flashMessage in app.session.flashbag.get('formulaire') %}
<div class="formulaire">
 Merci de nous avoir contact√© 
</div>
{% endfor %}


<form action="{{ path('EsieaBlogBundle_contact') }}" method="post" {{ form_enctype(form) }} class="formulaire">
